{
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["env.d.ts", ".eslintrc.js", ".prettierrc.js", "./src/**/*"],
  "exclude": ["node_modules"]
}
